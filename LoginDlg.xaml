<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="368" Width="436" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Button x:Name="Button_Google" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="206" Height="46" BorderThickness="0" Padding="0" Background="Transparent">
            <Image Source="./btn_google_sign-in.png" Stretch="UniformToFill"/>
        </Button>
        <Button x:Name="Button_Anon" Content="Anonymously" Margin="8"
                HorizontalAlignment="Left" VerticalAlignment="Top" Width="190" Height="34" />

        <TextBox x:Name="TextBox_Output" HorizontalAlignment="Left" Height="200" 
                 TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"
            IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</Window>
